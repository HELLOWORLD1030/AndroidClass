    <EditText
        android:id="@+id/AutoFillNumOne"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/operationTag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="+"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/AutoFillNumOne"
        app:layout_constraintTop_toTopOf="@id/AutoFillNumOne"
        tools:layout_editor_absoluteY="75dp" />

    <EditText
        android:id="@+id/AutoFillNumTwo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"

        app:layout_constraintLeft_toRightOf="@id/operationTag"
        app:layout_constraintTop_toTopOf="@id/AutoFillNumOne"
        />
<!--        app:layout_constraintLeft_toRightOf="@+id/AutoFillNumOne"-->
    <TextView
        android:id="@+id/equelsTag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="="
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/AutoFillNumTwo"
        app:layout_constraintTop_toTopOf="@id/AutoFillNumOne"
        tools:layout_editor_absoluteY="80dp" />
    <EditText
        android:id="@+id/edit_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:hint="@string/inputtip"
        android:inputType="numberSigned"
        app:layout_constraintLeft_toRightOf="@id/equelsTag"
        app:layout_constraintTop_toTopOf="@id/AutoFillNumOne"
        tools:layout_editor_absoluteY="75dp" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/buttonsend"
        app:layout_constraintTop_toBottomOf="@id/operationTag"
        app:layout_constraintLeft_toRightOf="@id/operationTag"
         />

    <Button
        android:id="@+id/button_jump"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="实验二"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_send" />

    <Button
        android:id="@+id/button_jump1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="实验三"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_jump" />


    <Button
        android:id="@+id/button_jumpRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="实验四（1）"
        app:layout_constraintTop_toBottomOf="@id/button_jump1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/button_jumpRecyclerView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="实验四（2）"
        app:layout_constraintTop_toBottomOf="@id/button_jumpRecyclerView"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/button_jumplab5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="实验五（1）"
        app:layout_constraintTop_toBottomOf="@id/button_jumpRecyclerView2"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/button_jumplab52"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="实验五（2）"
        app:layout_constraintTop_toBottomOf="@id/button_jumplab5"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/button_jumplab6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="实验六"
        app:layout_constraintTop_toBottomOf="@id/button_jumplab52"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/button_jumpListView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="ListView实验"
        app:layout_constraintTop_toBottomOf="@id/button_send"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/button_jumpBaseList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="BaseAdapter"
        app:layout_constraintTop_toBottomOf="@id/button_jumpListView"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/button_jumpSimpleList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SimpleAdapter"
        app:layout_constraintTop_toBottomOf="@id/button_jumpBaseList"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/button_jumpImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="ImageView实验"
        app:layout_constraintTop_toBottomOf="@id/button_jumpBaseList"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/button_jumpMusic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="音乐播放器"
        app:layout_constraintTop_toBottomOf="@id/button_jumpImage"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/button_jumpRobot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="qq机器人"
        app:layout_constraintTop_toBottomOf="@id/button_jumpMusic"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp" />



    <!--        android:onClick="sendMessage" />-->

</androidx.constraintlayout.widget.ConstraintLayout>